<resources>

  <style name="Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="Theme.Button" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="shapeAppearance">@style/Theme.ShapeAppearance.Button</item>
  </style>

  <style name="Theme.Button.ToggleGroup" parent="Widget.MaterialComponents.MaterialButtonToggleGroup">
    <item name="shapeAppearance">@style/Theme.ShapeAppearance.Button</item>
  </style>

  <style name="Theme.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="shapeAppearance">@style/Theme.ShapeAppearance.Button</item>
    <item name="iconGravity">textStart</item>
  </style>

  <style name="Theme.Button.Outlined.Dark" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:textColor">@color/secondary_dark</item>
    <item name="iconTint">@color/secondary_dark</item>
    <item name="rippleColor">@color/secondary_light</item>
    <item name="strokeColor">@color/secondary</item>
    <item name="strokeWidth">1.5dp</item>
    <item name="shapeAppearance">@style/Theme.ShapeAppearance.Button</item>
    <item name="backgroundTint">@color/selector_outlined_button_background</item>
  </style>

  <style name="Theme.ButtonGroup" />

  <style name="Theme.ButtonGroup.Outlined" parent="Theme.Button.Outlined" />

  <style name="Theme.ButtonGroup.Outlined.Left">
    <item name="strokeWidth">1.5dp</item>
    <item name="shapeAppearance">@style/Theme.ShapeAppearance.ButtonGroup.Left</item>
  </style>

  <style name="Theme.ButtonGroup.Outlined.Right">
    <item name="strokeWidth">1.5dp</item>
    <item name="shapeAppearance">@style/Theme.ShapeAppearance.ButtonGroup.Right</item>
  </style>

  <style name="Theme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="shapeAppearance">@style/Theme.ShapeAppearance.TextInputLayout</item>
  </style>

  <style name="Theme.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
    <item name="android:background">@color/primary_light</item>
    <item name="itemBackground">@null</item>
    <item name="itemHorizontalTranslationEnabled">true</item>
    <item name="itemIconTint">@drawable/bottom_nav_item_tint</item>
    <item name="itemTextColor">@drawable/bottom_nav_item_tint</item>
    <item name="itemRippleColor">@drawable/bottom_nav_ripple_color</item>
  </style>

</resources>
